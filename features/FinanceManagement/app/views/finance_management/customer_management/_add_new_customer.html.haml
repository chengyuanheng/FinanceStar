%div(class="modal fade" id="add_new_customer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
  %div(class="modal-dialog")
    %div(class="modal-content")
      %div(class="modal-header")
        %button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times
        %h4(class="modal-title" id="myModalLabel") 添加新客户
      %div(class="modal-body")
        = form_for :new_customer, :url => {:action => "add_new_customer"}, :http => {:method => "post"} do |f|
          %table.table.table-hover
            %thead
              %tr
                %td(algin="center")姓名
                %td(algin="center")电话
                %td(algin="center")邮箱
                %td(algin="center")初始资金
            %tbody
              %tr
                %td
                  =f.text_field :name, class: "add_customer_info_input form-control"
                %td
                  =f.text_field :phone, class: "add_customer_info_input2 form-control"
                %td
                  =f.text_field :email, class: "add_customer_info_input3 form-control"
                %td
                  =f.text_field :original_funds, class: "add_customer_info_input4 form-control"

          %div(class="modal-footer" )
            %input(type="submit" class="btn btn-primary btn-lg" value="保存")
            %input(type="button" class="btn btn-default btn-lg" data-dismiss="modal" value="取消" )
