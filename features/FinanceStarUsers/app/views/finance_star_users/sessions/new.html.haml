.auth-form
  = form_for :session, :url => sessions_path, :html => { :class => "form-horizontal" } do |f|
    .auth-form-header
      %label 登录
    .auth-form-body
      = f.label :email, "邮箱"
      = f.text_field :email, :placeholder => "邮箱"
      = f.label :password, "密 码"
      = f.password_field :password, :placeholder => "密码"
      = f.submit '登录', :class => "btn"
